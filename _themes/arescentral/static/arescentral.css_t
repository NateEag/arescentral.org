@import url("basic.css");

html {
    background: white;
    font: normal 0.9em sans-serif;
}
body {
    position: relative;
    margin: 1.5em;
}

#header {
    position: fixed;
    top: 1.5em;
    left: 1.5em;
    width: 20em;
}
#header .home {
    font-size: 3em;
    color: hsl(0, 0%, 30%);
    margin: 0 0.25em;
}
#navigation {
    display: block;
    margin: 0;
    padding: 0.375em;
}
#navigation li {
    display: block;
    padding: 0 0.375em;
}
#navigation li a,
#navigation li span {
    font-size: 1.25em;
    display: block;
}
hr {
    border: 1px solid hsl(0, 0%, 80%);
    border-width: 1px 0 0 0;
    margin: 0;
}
.document {
    margin-left: 21.5em;
    max-width: 50em;
}
a:link {
    text-decoration: none;
    color: {{ theme_accentcolor }};
}
a:visited {
    text-decoration: none;
    color: {{ theme_darkaccentcolor }};
}
a:hover {
    text-decoration: underline;
}
a[href^="http://"] {
    padding-right: 12px;
    background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAYAAACNMs+9AAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAFZJREFUeF59z4EJADEIQ1F36k7u5E7ZKXeUQPACJ3wK7UNokVxVk9kHnQH7bY9hbDyDhNXgjpRLqFlo4M2GgfyJHhjq8V4agfrgPQX3JtJQGbofmCHgA/nAKks+JAjFAAAAAElFTkSuQmCC) center right no-repeat;
}
a[href^="https://"] {
    padding-right: 12px;
    background: url(data:image/png;base64,) center right no-repeat;
}
a[href^="mailto:"] {
    padding-right: 12px;
    background: url(data:image/png;base64,) center right no-repeat;
}
a[href$=".zip"] {
    padding-right: 12px;
    background: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAAKCAQAAAAnOwc2AAAAGXRFWHRTb2Z0d2FyZQBBZG9iZSBJbWFnZVJlYWR5ccllPAAAAExJREFUeF5VyEEKwCAMAMH83o/0LT6kFHqQYqkevG1jIITs3kaQgn+A7A29ujnw5NKrsaPCrTegBBrRMzYeXkbGzsdkZRwsPWMUmEd+CkSgVeVp2OkAAAAASUVORK5CYII=) center right no-repeat;
}
a.image-reference {
    padding: 0;
    background: none;
}

.section {
    margin-bottom: 3em;
}
.section .section {
    margin-bottom: 2em;
}

.document {
    position: relative;
}

.article-date {
    float: left;
    position: relative;
    margin-right: 1em;
    background: hsl(0, 0%, 85%);
    color: hsl(0, 0%, 50%);
    width: 5.75em;
    text-transform: uppercase;
}
.article-date .month-day {
    background: {{ theme_accentcolor }};
    color: white;
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    width: 2.125em;
    font-size: 0.6em;
    font-weight: bold;
    text-align: center;
    line-height: 1.25em;
    padding: 0.25em 0.5em;
}
.article-date .year,
.article-date .month,
.article-date .day,
.article-date .month-day {
    display: block;
}
.article-date .year {
    font-size: 1.5em;
    line-height: 1em;
    padding: 0.1em 0.25em;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    color: hsl(0, 0%, 30%);
    font-weight: normal;
    margin: 1em 0 0.25em 0;
    line-height: 1em;
    clear: both;
}
h1 {
    font-size: 2em;
    clear: none;
}
h2 {
    font-size: 1.5em;
}
p {
    line-height: 1.25em;
    text-align: justify;
}
.footer {
    text-align: center;
}
a.internal em {
    font-style: normal;
}

.image-reference .screenshot {
    float: left;
    width: 32%;
    margin-right: 2%;
    margin-bottom: 1em;
}
.image-reference:nth-child(3n+1) .screenshot {
    margin-right: 0;
}

@media (max-width: 800px) {
    #header {
        position: relative;
        top: 0;
        left: 0;
        width: auto;
    }
    #navigation li {
        display: inline;
        width: 20%;
    }
    #navigation li a,
    #navigation li span {
        display: inline;
    }
    .document {
        margin-left: 0;
        max-width: auto;
    }
}
@media (max-width: 420px) {
    #navigation li {
        display: block;
        width: 100%;
    }
    #navigation li a,
    #navigation li span {
        display: block;
    }
    .image-reference .screenshot,
    .image-reference:nth-child(3n+1) .screenshot {
        float: left;
        width: 48%;
        margin-right: 4%;
        margin-bottom: 1em;
    }
    .image-reference:nth-child(2n+1) .screenshot {
        margin-right: 0;
    }
}
